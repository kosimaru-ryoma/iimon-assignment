<header>
  <nav class="navbar navbar-expand-lg navbar-light py-2 d-block border-bottom" data-navbar-on-scroll="data-navbar-on-scroll">
    <div class="container-fluid">
      <%= link_to root_url, "data-turbolinks": false, class: "navbar-brand d-inline-flex" do %>
        <span class="fs-2 fw-bold ms-2">バックエンド B</span>
      <% end %>
      <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse text-right border-lg-0 mt-4 mt-lg-0" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <% if logged_in? %>
          <li class="nav-item px-2 mt-3 mb-3">
            <%= link_to "Profile", current_user, class: "nav-link text-white btn btn-primary" %>
          </li>
          <li class="nav-item px-2 mt-3 mb-3">
            <%= link_to "Logout", logout_path, data: { turbo_method: :delete }, class: "nav-link text-white btn btn-danger" %>
          </li>
        <% else %>

          <li class="nav-item px-2 mt-3 mb-3">
            <%= link_to "Login", login_path, class: "nav-link text-white btn btn-primary" %>
          </li>
          <li class="nav-item px-2 mt-3 mb-3">
            <%= link_to "Sign Up", signup_path, class: "nav-link text-dark btn btn-warning" %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>